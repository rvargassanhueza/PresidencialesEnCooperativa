<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cl.cooperativa.presidenciales2018encooperativa">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/facebook_app_id"/>

    <activity
            android:name="cl.cooperativa.presidenciales2018encooperativa.Autentication"
            android:configChanges=
            "keyboard|keyboardHidden|screenLayout|screenSize|orientation"
           >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>


        </activity>
        <activity
            android:name="cl.cooperativa.presidenciales2018encooperativa.ContainerActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cl.cooperativa.presidenciales2018encooperativa.ContainerActivity" /> <!-- soporte para versiones anteriores a lollipop o 5.1 -->
            >

        </activity>
        <activity
            android:name="cl.cooperativa.presidenciales2018encooperativa.PictureDetailActivity"
            android:parentActivityName="cl.cooperativa.presidenciales2018encooperativa.ContainerActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cl.cooperativa.presidenciales2018encooperativa.ContainerActivity" /> <!-- soporte para versiones anteriores a lollipop o 5.1 -->
            >

        </activity>

        <activity android:name="cl.cooperativa.presidenciales2018encooperativa.MyAdapterDetail">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cl.cooperativa.presidenciales2018encooperativa.ContainerActivity" /> <!-- soporte para versiones anteriores a lollipop o 5.1 -->
            >

        </activity>
        <service
            android:name="cl.cooperativa.presidenciales2018encooperativa.MyDownloadService"
            android:exported="false"/>
    </application>

</manifest>